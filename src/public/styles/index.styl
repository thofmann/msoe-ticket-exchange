#index
    .header
        padding: 24px
        background-color: #0b1e2e
        color: #ffffff

        .top
            font-weight: bold

            .left
                text-align: left

            .right
                text-align: right

                a
                    margin-left: 20px

        .title
            text-align: center
            font-size: 52px
            max-width: 500px
            margin: 0 auto
            padding: 52px 0

    .stats
        background-color: #39673e
        text-align: center
        color: #ffffff

        .stat
            padding: 20px
            box-sizing: border-box

            .number
                font-size: 32px
                padding-bottom: 10px

            .name
                font-size: 18px

    .orderbook
        background-color: #fafafa
        text-align:center
        padding: 20px 0

        .top
            padding-bottom: 20px

            .title
                font-size: 34px
                padding: 0 20px 5px 20px
                border-bottom: 1px solid #292929

        .list
            margin: 0 auto
            display: inline-block
            text-align: left

            th, td
                padding: 4px 10px

        .none
            font-style: italic
