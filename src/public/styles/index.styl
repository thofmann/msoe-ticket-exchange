#index
    .header
        padding: 12px
        background-color: #212121
        color: #ffffff

        .name
            float: left
            font-weight: bold

        .login
            float: right
            font-weight: bold

        .title
            text-align: center
            font-size: 42px
            max-width: 500px
            margin: 0 auto
            padding: 42px 0

    .stats
        background-color: #484848
        text-align: center
        color: #ffffff
        font-weight: bold

        .stat
            padding: 20px
            box-sizing: border-box

            .number
                font-size: 24px

            .name
                font-size: 12px
